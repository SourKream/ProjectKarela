<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:paddingTop="10dp"
android:paddingBottom="10dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="#bdbdbd"
        android:id="@+id/SNo"
        android:text="1"
        android:textSize="19dp"
        android:paddingTop="3dp"
        android:layout_weight="0.3"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_marginRight="5dp">

    <TextView
        android:id="@+id/complaintTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complaint Title"
        android:textSize="35dp"
        android:textColor="#000000"
        android:layout_gravity="left"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/complaintDescription"
        android:text="Description"
        android:textSize="15dp"
        android:textColor="#7c7c82"
        android:minLines="2"
        android:maxLines = "2"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:paddingRight="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_circle_orange"
            android:id="@+id/complaint_res_status"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_bookmark_red_24dp"
            android:id="@+id/complaint_is_mine"
            android:visibility="invisible"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>
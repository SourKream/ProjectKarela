<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :login_username, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :login_password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
	  <br> <br>
    <% end %>
  </div>
</div>

<%= link_to 'Back', root_path %>
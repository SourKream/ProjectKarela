<%= form_for(@complaint) do |f| %>
  <% if @complaint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@complaint.errors.count, "error") %> prohibited this complaint from being saved:</h2>

      <ul>
      <% @complaint.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :complaint_type_id %><br>
    <!-- <%= f.number_field :complaint_type_id %> snair -->
	<!-- TODO resolve how to show level -->
	<%= f.collection_select(:complaint_type_id, ComplaintType.all, :id, :type_name) %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </div>
  <div class="field">
    <%= f.label :is_resolved %><br>
    <%= f.check_box :is_resolved %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
